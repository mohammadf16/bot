NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# JWT secrets (use strong random strings in production)
JWT_ACCESS_SECRET=replace-with-very-strong-access-secret
JWT_REFRESH_SECRET=replace-with-very-strong-refresh-secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Key for server-seed encryption (32+ chars, random)
SEED_ENCRYPTION_KEY=replace-with-32-byte-random-key

# CORS
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
API_HARDENING_ENABLED=true
API_STRICT_HOST_CHECK=true
API_ALLOWED_HOSTS=api.yourdomain.com
# Optional but strongly recommended for protected routes behind reverse proxy:
# Send this header from your edge proxy only (not browser):
# x-api-gateway-key: <API_GATEWAY_TOKEN>
API_GATEWAY_TOKEN=replace-with-long-random-gateway-token-min-24
API_GATEWAY_ENFORCE=true
API_PROTECTED_PREFIXES=/api/v1/admin,/api/v1/wallet,/api/v1/raffles,/api/v1/slide,/api/v1/auctions,/api/v1/me

# Bootstrap admin
BOOTSTRAP_ADMIN_EMAIL=admin@yourdomain.com
BOOTSTRAP_ADMIN_PASSWORD=StrongAdminPassword_ChangeMe

# MySQL persistence
MYSQL_ENABLED=true
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=change-me
MYSQL_DATABASE=car_platform
MYSQL_STATE_TABLE=app_state_snapshots
MYSQL_SSL_REQUIRED=false
