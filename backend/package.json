{
  "name": "car-raffle-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "node --test --import tsx tests/**/*.test.ts",
    "test:generate": "tsx tests/test-runner.ts",
    "test:generate:large": "tsx tests/test-runner.ts --users 500 --spins 10",
    "test:generate:export": "tsx tests/test-runner.ts --users 100 --spins 5 --export test-report.json",
    "test:clear-db": "tsx tests/clear-db.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.0.2",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.0.0",
    "mysql2": "^3.14.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
