# Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:4000/api/v1/live
NEXT_PUBLIC_BASE_PATH=
# For local dev when backend gateway token is enabled
NEXT_PUBLIC_API_GATEWAY_KEY=LocalGatewayToken_ChangeMe_123456789

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/carraffle

# Payment Gateway
PAYMENT_GATEWAY_KEY=your_key_here
PAYMENT_GATEWAY_SECRET=your_secret_here

# Email Service
EMAIL_SERVICE=your_email_service
EMAIL_FROM=noreply@carraffle.ir

# Admin
ADMIN_SECRET_KEY=your_admin_secret_key

# Features
ENABLE_LIVE_RAFFLE=true
ENABLE_REAL_TIME_UPDATES=true
